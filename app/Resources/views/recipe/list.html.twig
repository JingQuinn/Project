{% extends '_base.html.twig' %}

{% block body %}
    <h1>Recipes list</h1>

    <table>
        <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Summary</th>
            <th>Steps</th>
            <th>Ingredients</th>
            <th>Author</th>
            <th>Votdown</th>
            <th>Votup</th>
        </tr>
        </thead>
        <tbody>
        {% for recipe in recipes %}
            <tr>
                <td>{{ recipe.id }}</td>
                <td>{{ recipe.title }}</td>
                <td>{{ recipe.summary }}</td>
                <td>{{ recipe.steps }}</td>
                <td>{{ recipe.ingredients }}</td>
                <td>{{ recipe.author }}</td>
                <td>{{ recipe.votDown }}</td>
                <td>{{ recipe.votUp }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('recipe_new') }}">Create a new recipe</a>
        </li>
    </ul>
{% endblock %}
