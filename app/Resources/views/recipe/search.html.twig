{% extends '_base.html.twig' %}
{% block stylesheets %}
    @import '/css/table.css';
{% endblock %}
{% block body %}
    <h1>List of recipes by date ascendant</h1>

    <table>
        <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Summary</th>
            <th>Steps</th>
            <th>Ingredients</th>
            <th>Author</th>
            <th>Votdown</th>
            <th>Votup</th>
            <th>Tag</th>
            <th>Comment</th>
        </tr>
        </thead>
        <tbody>
        {% for recipe in recipes %}
            <tr>
                <td>{{ recipe.id }}</td>
                <td>{{ recipe.title }}</td>
                <td>{{ recipe.summary }}</td>
                <td>{{ recipe.steps }}</td>
                <td>{{ recipe.ingredients }}</td>
                <td>{{ recipe.author }}</td>
                <td>{{ recipe.votDown }}</td>
                <td>{{ recipe.votUp }}</td>
                <td>{{ recipe.tag }}</td>
                <td>{{ recipe.comment }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
