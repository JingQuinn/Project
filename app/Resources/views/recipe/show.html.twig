{% extends '_base.html.twig' %}

{% block body %}
    <h1>Recipe</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ recipe.id }}</td>
            </tr>
            <tr>
                <th>Recipetitle</th>
                <td>{{ recipe.recipeTitle }}</td>
            </tr>
            <tr>
                <th>Recipesummary</th>
                <td>{{ recipe.recipeSummary }}</td>
            </tr>
            <tr>
                <th>Recipesteps</th>
                <td>{{ recipe.recipeSteps }}</td>
            </tr>
            <tr>
                <th>Recipeingredients</th>
                <td>{{ recipe.recipeIngredients }}</td>
            </tr>
            <tr>
                <th>Authorusername</th>
                <td>{{ recipe.authorUsername }}</td>
            </tr>
            <tr>
                <th>Comments</th>
                <td>{{ recipe.comments }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('recipe_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('recipe_edit', { 'id': recipe.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
